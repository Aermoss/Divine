type khronos_uint32_t = u32;
type khronos_int64_t = i64;
type khronos_uint64_t = u64;

type khronos_int8_t = i8;
type khronos_uint8_t = u8;
type khronos_int16_t = i16;
type khronos_uint16_t = u16;

type khronos_intptr_t = i64;
