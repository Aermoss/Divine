const LLVMErrorSuccess: i64 = 0i64;

type LLVMErrorRef = void*;
type LLVMErrorTypeId = void*;

extern "C" {
    func LLVMGetErrorTypeId(Err: LLVMErrorRef) -> LLVMErrorTypeId;
    func LLVMConsumeError(Err: LLVMErrorRef);
    func LLVMCantFail(Err: LLVMErrorRef);
    func LLVMGetErrorMessage(Err: LLVMErrorRef) -> i8*;
    func LLVMDisposeErrorMessage(ErrMsg: i8*);
    func LLVMGetStringErrorTypeId() -> LLVMErrorTypeId;
    func LLVMCreateStringError(ErrMsg: i8*) -> LLVMErrorRef;
}