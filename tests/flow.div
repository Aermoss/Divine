extern "C" {
    func IfBlockTest(x: i32) -> i64 {
        if x >= 5 {
            ret 10i64;
        } else if x == 3 {
            ret 7i64;
        } else {
            ret 5i64;
        }
    }

    func WhileBlockTest(mut x: i32) -> i64 {
        let mut i: i64 = 0;

        while x != 0 {
            i += 2;
            x -= 1;
        }

        ret i;
    }

    func ForBlockTest(mut x: i32) -> i64 {
        let mut i: i64 = 0;

        for let mut j: i32 = 0; j < x; j += 1 {
            i += 2;
        }

        ret i;
    }
}